{
    "printWidth": 120,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "proseWrap": "always",
    "overrides": [
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "singleQuote": false,
                "trailingComma": "none",
                "parser": "json"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": "*.html",
            "options": {
                "htmlWhitespaceSensitivity": "css",
                "singleAttributePerLine": true,
                "parser": "angular"
            }
        }
    ]
}
